<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RepActivity" 
    android:background="@color/white">

    <TextView android:id="@+id/former"
        android:text="原有宝物"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <EditText 
        android:id="@+id/edit_former"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:text="可以不填写"  
        android:layout_below="@id/former"      
        />
    <TextView android:id="@+id/newput2"
        android:text="待放宝物"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_former"
        />
    <EditText 
        android:id="@+id/edit_forput2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:text="可以不填写"  
        android:layout_below="@id/newput2"      
        />
    
    <Button
        android:id="@+id/ok2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_forput2"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dip"
        android:text="确定" 
        />
    <Button  
        android:id="@+id/cancel2"      
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_alignTop="@id/ok2"
        android:layout_toLeftOf="@id/ok2"
        android:text="取消" 
        />

</RelativeLayout>